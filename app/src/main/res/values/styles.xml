<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar"/>
    <style name="AppTheme" parent="Theme.AppCompat.Light"/>

    <style name="LoginTheme" parent="AppTheme" >
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/background_material_light</item>
        <item name="android:buttonStyle">@style/ButtonColor</item>
        <item name="android:editTextColor">@color/EditTextColor</item>
        <item name="android:autoCompleteTextViewStyle">@style/autoCompleteTextViewStyle</item>
        <item name="colorButtonNormal">@color/buttoncolor</item>
    </style>

    <style name="ButtonColor" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/buttoncolor</item>
    </style>

    <style name="autoCompleteTextViewStyle" parent="@android:style/Widget.AutoCompleteTextView">
        <item name="android:editTextColor">@color/EditTextColor</item>
    </style>

    <style name="FamilyTreeTheme" parent="AppThemeNoActionBar" >
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/background_material_light</item>
        <item name="android:buttonStyle">@style/ButtonColor</item>
        <item name="android:editTextColor">@color/EditTextColor</item>
        <item name="android:autoCompleteTextViewStyle">@style/autoCompleteTextViewStyle</item>
        <item name="colorButtonNormal">@color/buttoncolor</item>
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>

</resources>
