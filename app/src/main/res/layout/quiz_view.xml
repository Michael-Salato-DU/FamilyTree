<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    tools:context=".QuizFragment">

    <TextView
        android:id="@+id/question_text"
        android:layout_width="350dp"
        android:layout_height="75dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:text="Question"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/answers_group"
        android:layout_width="350dp"
        android:layout_height="223dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_quiz">

        <RadioButton
            android:id="@+id/answer_button_a"
            android:layout_width="315dp"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"
            android:text="A"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="239dp" />

        <RadioButton
            android:id="@+id/answer_button_b"
            android:layout_width="315dp"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"
            android:text="B"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="148dp" />

        <RadioButton
            android:id="@+id/answer_button_c"
            android:layout_width="315dp"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"
            android:text="C"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="105dp" />

        <RadioButton
            android:id="@+id/answer_button_d"
            android:layout_width="315dp"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"
            android:text="D"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="191dp" />
    </RadioGroup>

    <ImageView
        android:id="@+id/image_quiz"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:src="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question_text" />

</android.support.constraint.ConstraintLayout>