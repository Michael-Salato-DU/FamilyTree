<?xml version="1.0" encoding="utf-8"?>
<!-- source for adding a header to the nav drawer: -->
<!-- title: Create a navigation drawer: Add a header to the nav drawer -->
<!-- author: Android Developers Documentation -->
<!-- https://developer.android.com/training/implementing-navigation/nav-drawer#HeaderLayout -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="192dp"
    android:background="?attr/colorPrimaryDark"
    android:padding="16dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:orientation="vertical"
    android:gravity="bottom">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/header"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

</LinearLayout>
