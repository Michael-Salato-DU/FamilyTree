<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="familytree.a188project1.du.bestdamtree">

    <application

        android:name=".FamilyTree"
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/FamilyTreeTheme">
        <activity
            android:name=".LoginActivity"
            android:theme="@style/LoginTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".TreeActivity"
            android:label="@string/title_activity_tree"
            android:theme="@style/FamilyTreeTheme" />
        <activity android:name=".PersonActivity"
            android:theme="@style/AppTheme.PersonTheme"/>
        <activity android:name=".NewPersonActivity"
            android:theme="@style/AppTheme.PersonTheme"/>
        <activity android:name=".EditPersonActivity"
            android:theme="@style/AppTheme.PersonTheme"/>
        <activity android:name=".RegisterActivity"
            android:theme="@style/FamilyTreeTheme" />
        <activity android:name=".MainActivity"
            android:theme="@style/FamilyTreeTheme" />
        <activity android:name=".HelpfulHintsActivity"
            android:theme="@style/AppTheme.HelpfulHints"/>
        <activity android:name=".QuizActivity"/>
        <activity android:name=".QuizActivityAnswers"/>
        <activity android:name=".QuizActivityReward"/>

    </application>

</manifest>